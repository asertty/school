package main;

public class poketmon {
		
	//속성 : HP,공격력, 방어력, 스피드
		
		String name;
		int hp;
		int atk;
		int def;
		int level = 1;
		
		//기능 : 울기, 레벨업 
		
		void 울기() {
			
		}
		void 레벨업(){
			level++;
			
		}
		
	}

(작업1)-----------------------------------------
package main;

public class Game {

	public static void main(String[] args) {
//		int num; // --> int 타입의 변수
//		poketmon p1 = new poketmon();
		
		poketmon p1 = new poketmon();
	//		클래스 - poketmon
	//		인스턴스 - p1
		p1.name = "고라파덕";
		
		System.out.println(p1.name + "의 레벨은 : " + p1.level);
		System.out.println("레벨업!");
		
		p1.레벨업();
		System.out.println(p1.name + "의 레벨은 : " + p1.level);
		
		

	}

}
