n = int(input())
for i in range(1,n+1):
  print(" "*(n-i)+"*"*(i*2-1))
for j in range(n-1,0,-1):
  print(" "*(n-j)+"*"*(j*2-1))
-------------------------------------------
a = 17
def test():
   global a
   a = 13
   print(a)
print(a)
test()
