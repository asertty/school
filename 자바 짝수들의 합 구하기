package a;

import java.util.Scanner;

public class aa {

	public static void main(String[] args) {
		 Scanner sc = new Scanner(System.in);
	      
		 System.out.println("숫자 입력");
		 
		 int a =sc.nextInt();
		 int b = 0;
		 
		 for(int i=1; i<=a; i++) {
	        	
	        	if(i%2==0) {
	        	b = i+b;
	        	}

		 }
		 System.out.println(b);
	}
}
